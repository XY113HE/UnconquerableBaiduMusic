<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_myloginfragment_headimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:background="#000"/>
        <TextView
            android:id="@+id/tv_myloginfragment_username"
            android:layout_toEndOf="@id/iv_myloginfragment_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="、、DD5864466841"/>
        <ImageView
            android:id="@+id/iv_myloginfragment_level"
            android:layout_toEndOf="@id/iv_myloginfragment_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/iv_myloginfragment_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>


</LinearLayout>