<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:id="@+id/iv_item_music_recommend_gridview_hotmv_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#cfe0f9"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_gridview_hotmv_mvname"
        android:layout_below="@id/iv_item_music_recommend_gridview_hotmv_bg"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:text="如果"
        android:paddingTop="3dp"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_gridview_hotmv_author"
        android:layout_below="@id/tv_item_music_recommend_gridview_hotmv_mvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鹿晗"
        android:textSize="12dp"/>
</RelativeLayout>