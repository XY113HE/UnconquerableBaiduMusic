<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_item_music_recommend_gridview_leprogram_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_gridview_leprogram_title"
        android:layout_below="@id/iv_item_music_recommend_gridview_leprogram_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="有一首歌,能直击你的心灵"/>
</RelativeLayout>