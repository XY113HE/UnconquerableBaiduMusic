<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_minefragment_uppart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/mainfragment_uppart_bg"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_alignBottom="@id/iv_minefragment_uppart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DDD"
        android:layout_toRightOf="@id/iv_user_head"
        android:layout_alignTop="@id/iv_user_head"/>
    <TextView
        android:id="@+id/tv_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DDD"
        android:layout_toRightOf="@id/iv_user_head"
        android:layout_alignBottom="@id/iv_user_head"/>

    <TextView
        android:id="@+id/tv_random_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/iv_minefragment_uppart"
        android:layout_alignBottom="@id/iv_minefragment_uppart"
        android:text="随便听听"/>
    <ImageView
        android:id="@+id/iv_random_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@id/tv_random_music"
        android:layout_alignEnd="@id/iv_minefragment_uppart"
       />
    <LinearLayout
        android:layout_below="@id/iv_minefragment_uppart"
        android:id="@+id/ll_minefragment_localmusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="本地音乐"
            android:gravity="center_vertical|start"
            android:drawableStart="@mipmap/ic_launcher"
            android:layout_height="match_parent" />
        <!--<TextView-->
            <!--android:id="@+id/tv_minefragment_localmusic_information"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent" />-->
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_minefragment_localmusic"
        android:id="@+id/ll_minefragment_recentlyplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="最近播放"
            android:gravity="center_vertical|start"
            android:drawableStart="@mipmap/ic_launcher"
            android:layout_height="match_parent" />
        <!--<TextView-->
        <!--android:id="@+id/tv_minefragment_localmusic_information"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent" />-->
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_minefragment_recentlyplay"
        android:id="@+id/ll_minefragment_mydownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="我的下载"
            android:gravity="center_vertical|start"
            android:drawableStart="@mipmap/ic_launcher"
            android:layout_height="match_parent" />
        <!--<TextView-->
        <!--android:id="@+id/tv_minefragment_localmusic_information"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent" />-->
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/creat_musiclist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
</RelativeLayout>
</ScrollView>