<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_headimg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:background="@mipmap/ic_listmore_normal"
        android:src="@mipmap/img_option_setting_user"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_mylogin_topbar_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text=" 立即登录"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/iv_item_mylogin_topbar_headimg"
        android:layout_toEndOf="@id/iv_item_mylogin_topbar_headimg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="登录后, 自动为您同步歌曲"
        android:layout_below="@id/tv_item_mylogin_topbar_username"
        android:layout_toEndOf="@id/iv_item_mylogin_topbar_headimg"/>

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_level"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_item_mylogin_topbar_username"
        android:layout_toEndOf="@id/iv_item_mylogin_topbar_headimg"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_loginicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/bt_option_setting_sign_in_selector" />
</RelativeLayout>
