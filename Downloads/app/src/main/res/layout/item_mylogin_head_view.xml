<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_headimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_mylogin_topbar_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DD5864466841"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/iv_item_mylogin_topbar_headimg"
        android:layout_toEndOf="@id/iv_item_mylogin_topbar_headimg"
        />

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_level"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_item_mylogin_topbar_username"
        android:layout_toEndOf="@id/iv_item_mylogin_topbar_headimg"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_item_mylogin_topbar_loginicon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>
