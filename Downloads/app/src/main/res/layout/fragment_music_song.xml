<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--展示数据的gridview-->
        <GridView
            android:id="@+id/gridview_musicfragment_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:scrollbars="none">

        </GridView>
        <!--顶部标题栏-->
        <RelativeLayout
            android:id="@+id/rl_musicfragment_song_topbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f9f9f9">
            <TextView
                android:id="@+id/tv_musicfragment_song_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="全部"
                android:textColor="#000"
                android:drawablePadding="5dp"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/stick_icon"
                android:textSize="25dp"
                android:paddingStart="10dp"/>
            <ImageView
                android:id="@+id/iv_musicfragment_song_all_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_mv_pull_down_normal"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_toEndOf="@id/tv_musicfragment_song_all"/>

            <TextView
                android:id="@+id/tv_musicfragment_song_newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新"
                android:textSize="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
            <View
                android:id="@+id/tv_musicfragment_song_symbol"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@id/tv_musicfragment_song_newest"
                android:background="#aaa"
                android:layout_toStartOf="@id/tv_musicfragment_song_newest"/>
            <TextView
                android:id="@+id/tv_musicfragment_song_hotest"
                android:layout_toStartOf="@id/tv_musicfragment_song_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最热"
                android:paddingEnd="10dp"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:textColor="#31d7ef"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>