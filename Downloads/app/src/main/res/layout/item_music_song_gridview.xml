<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_item_music_song_gridview_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_music_song_gridview_bg">
        <ImageView
            android:id="@+id/iv_item_music_song_gridview_listen_icon"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_item_music_song_gridview_listen_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="67126"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_music_song_gridview_play"
        android:layout_alignEnd="@id/iv_item_music_song_gridview_bg"
        android:layout_alignBottom="@id/iv_item_music_song_gridview_bg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_item_music_song_gridview_title"
        android:layout_below="@id/iv_item_music_song_gridview_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="[环球之音],一人一首华语经典"/>
    <TextView
        android:id="@+id/tv_item_music_song_gridview_author"
        android:layout_below="@id/tv_item_music_song_gridview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by author"/>

</RelativeLayout>