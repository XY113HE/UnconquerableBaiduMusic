<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_item_music_pk_mypk_wesing_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:text="爱情余味 - 张信哲"
            />

        <TextView
            android:id="@+id/tv_item_music_pk_mypk_wesing_amount"
            android:layout_below="@id/tv_item_music_pk_mypk_wesing_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="2878人唱过"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_listview_pk_mypk_wesing_icon"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mike_normal"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#DFDFDF"/>
</RelativeLayout>