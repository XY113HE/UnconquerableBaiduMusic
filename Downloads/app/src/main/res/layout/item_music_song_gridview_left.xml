<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingEnd="5dp">

    <ImageView
        android:id="@+id/iv_item_music_song_gridview_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#c5efb1"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_item_music_song_gridview_listen_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_music_song_gridview_bg"
        android:drawableStart="@mipmap/ic_listen_count"
        android:gravity="center"
        android:text="67126"
        android:textColor="#fff"
        android:layout_margin="8dp"
        android:drawablePadding="5dp"
        android:textSize="12dp" />


    <ImageView
        android:id="@+id/iv_item_music_song_gridview_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_music_song_gridview_bg"
        android:layout_alignEnd="@id/iv_item_music_song_gridview_bg"
        android:layout_margin="10dp"
        android:src="@drawable/bt_play_selector" />

    <TextView
        android:id="@+id/tv_item_music_song_gridview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_music_song_gridview_bg"
        android:layout_marginTop="5dp"
        android:text="[环球之音],一人一首华语经典"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_item_music_song_gridview_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_music_song_gridview_title"
        android:text="by author" />


</RelativeLayout>