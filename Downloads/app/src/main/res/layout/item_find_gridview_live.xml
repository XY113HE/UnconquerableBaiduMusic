<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ec92ae">
    <ImageView
        android:id="@+id/iv_item_find_gridview_live_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_item_find_gridview_live_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_find_gridview_live_bg"
        android:text="29402"
        android:gravity="center_vertical"
        android:drawableStart="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/iv_item_find_gridview_live_playicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_alignBottom="@id/iv_item_find_gridview_live_bg"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_item_find_gridview_live_title"
        android:layout_below="@id/iv_item_find_gridview_live_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="团子求 过任务"
        android:padding="5dp"
        android:textColor="#000"/>
</RelativeLayout>