<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <ImageView
        android:id="@+id/iv_item_music_recommend_gridview_hotsell_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_gridview_hotsell_title"
        android:layout_below="@id/iv_item_music_recommend_gridview_hotsell_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="God Onliy Knows"
        android:textColor="#000"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12dp"
        android:paddingTop="3dp"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_gridview_hotsell_author"
        android:layout_below="@id/tv_item_music_recommend_gridview_hotsell_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John Legend"
        android:textSize="12dp"/>
</RelativeLayout>