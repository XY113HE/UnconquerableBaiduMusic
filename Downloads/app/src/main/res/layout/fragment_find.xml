<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/iv_findfragment_topbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
        <!--商城-->
        <LinearLayout
            android:id="@+id/ll_findfragment_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableStart="@mipmap/find_shop"
                android:gravity="center_vertical"
                android:text="商城"
                android:paddingStart="15dp"
                android:textColor="#000"
                android:drawablePadding="10dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/icon_option_setting_arrow"
                android:drawablePadding="5dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="15dp"
                android:text="更多" />


        </LinearLayout>

        <com.huoer.unconquerablebaidumusic.customview.MyGridView
            android:id="@+id/gridview_findfragment_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:numColumns="3">

        </com.huoer.unconquerablebaidumusic.customview.MyGridView>

        <!--直播-->

        <LinearLayout
            android:id="@+id/ll_findfragment_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableStart="@mipmap/find_live"
                android:gravity="center_vertical"
                android:text="直播"
                android:paddingStart="20dp"
                android:textColor="#000"
                android:drawablePadding="12dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/icon_option_setting_arrow"
                android:drawablePadding="5dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="15dp"
                android:text="更多" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_findfragment_live_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.huoer.unconquerablebaidumusic.customview.CircleTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:bgColor="#c862ce"
                app:radius="25dp"
                app:text="女神"
                app:textSize="14dp" />

            <com.huoer.unconquerablebaidumusic.customview.CircleTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:bgColor="#9b5dda"
                app:radius="25dp"
                app:text="好声音"
                app:textSize="14dp" />

            <com.huoer.unconquerablebaidumusic.customview.CircleTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:bgColor="#e640ef"
                app:radius="25dp"
                app:text="劲爆"
                app:textSize="14dp" />

            <com.huoer.unconquerablebaidumusic.customview.CircleTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:bgColor="#dc6eb7"
                app:radius="25dp"
                app:text="萌妹"
                app:textSize="14dp" />

            <com.huoer.unconquerablebaidumusic.customview.CircleTextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:bgColor="#57c0e6"
                app:radius="25dp"
                app:text="推荐"
                app:textSize="14dp" />
        </LinearLayout>

        <!--直播gridview-->
        <com.huoer.unconquerablebaidumusic.customview.MyGridView

            android:id="@+id/gridview_findfragment_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:numColumns="2"
            android:layout_marginBottom="-107dp"
            >

        </com.huoer.unconquerablebaidumusic.customview.MyGridView>


    </LinearLayout>

</ScrollView>