<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_item_music_recommend_listview_special_column_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_listview_special_column_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_item_music_recommend_listview_special_column_bg"
        android:text="柯本今年50岁!脏帅范儿主场爱撸猫"/>
    <TextView
        android:id="@+id/tv_item_music_recommend_listview_special_column_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/iv_item_music_recommend_listview_special_column_bg"
        android:layout_below="@id/tv_item_music_recommend_listview_special_column_title"
        android:text="百度音乐独家策划"/>
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
</RelativeLayout>